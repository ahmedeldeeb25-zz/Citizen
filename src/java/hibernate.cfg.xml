<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/citizens</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password"/>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <property name="hibernate.show_sql">true</property>
    <mapping class="entities.post"/>
    <mapping class="entities.profile"/>
    <mapping class="entities.category"/>
    <mapping class="entities.sub_category"/>
    <mapping class="entities.comment"/>
    <mapping class="entities.contact"/>
    <mapping class="entities.govern"/>
    <mapping class="entities.city"/>
    <mapping class="entities.interest"/>
    <mapping class="entities.notification"/>
    <mapping class="entities.Suggested"/>
  </session-factory>
</hibernate-configuration>
